# Regression test: types loaded via `variable = @use` should be able to reference sibling types
# Tests two scenarios:
# 1. Instantiating sibling type in type body (x = Sibling_Type())
# 2. Instantiating sibling type inside a function (create_sibling_in_func)

Sibling_Type {
	value = 42
}

Main_Type {
	sibling = Sibling_Type()

	get_sibling_value {;
		sibling.value
	}

	create_sibling_in_func {;
		s = Sibling_Type()
		s.value
	}
}