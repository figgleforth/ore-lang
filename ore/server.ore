Request {
	path,
	method,
	query,
	params,
	headers,
	body,
}

Response {
	status,
	headers,
	body,

	redirect { location; @super }
}

Server {
	port,

	new { port = 8080;
		.port = port
	}

	# note: The following routes prevent 500 errors since we're handling all routes here, nothing is filtered.
	get://favicon.ico {;
		response.status = 200
		''
	}

	get://apple-touch-icon-precomposed.png {;
		response.status = 200
		''
	}
}
